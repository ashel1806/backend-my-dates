{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "brace-style": "off",
    "camelcase": "error",
    "curly": "error",
    "eqeqeq": "error",
    "semi": ["error"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-console": "off",
    "no-underscore-dangle": ["error", {
      "enforceMethodNames": true
    }]
  }
}
